@page "/Account/Login"

@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using Microsoft.EntityFrameworkCore
@using System.Text
@using System.Text.Encodings.Web
@using iPath.EF.Core.Database
@using iPath.Domain.Authentication
@using iPath.API.Authentication



@inject IPathSignInManager SignInManager
@inject UserManager<User> um
@inject ILogger<Login> Logger
@inject NavigationManager NavigationManager
@inject IdentityRedirectManager RedirectManager
@inject IEmailSender<User> EmailSender
@inject IStringLocalizer T


<PageTitle>Log in</PageTitle>

<MudPaper Elevation="0" MaxWidth="480px">
    <MudStack Spacing="10">
        <MudCard Style="width: 100%;">
            <MudCardHeader Class="mud-theme-info py-2">
                <MudText Typo="Typo.subtitle1">Login</MudText>
            </MudCardHeader>
            <MudCardContent>
                <StatusMessage Message="@errorMessage" />
                <EditForm Model="Input" method="post" OnValidSubmit="LoginUser" FormName="login">
                    <DataAnnotationsValidator />

                    <MudText GutterBottom="true" Typo="Typo.body1">log in with your iPath account.</MudText>

                    <MudStaticTextField For="@(() => Input.Username)" @bind-Value="Input.Username"
                                        Label="Username or Email" Placeholder="name@example.com"
                                        Margin="Margin.Dense" Variant="Variant.Outlined" ShrinkLabel="true"
                                        UserAttributes="@(new() { { "autocomplete", "username" }, { "aria-required", "true" } })" />
                    <MudStaticTextField For="@(() => Input.Password)" @bind-Value="Input.Password"
                                        Label="Password" InputType="InputType.Password" Placeholder="password"
                                        Margin="Margin.Dense" Variant="Variant.Outlined" ShrinkLabel="true"
                                        UserAttributes="@(new() { { "autocomplete", "current-password" }, { "aria-required", "true" } })" />
                    <MudStack Row Class="mt-2">
                        <MudStaticCheckBox For="@(() => Input.RememberMe)" @bind-Value="Input.RememberMe">Remember me</MudStaticCheckBox>
                        <MudSpacer />
                        <MudStaticButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" FormAction="FormAction.Submit">Log in</MudStaticButton>
                    </MudStack>

                    <MudDivider Class="my-2" />

                    @if (!string.IsNullOrEmpty(InitialAdminPassword))
                    {
                        <MudAlert Severity="Severity.Info" Class="ma-4">
                            <strong>This is a new Database.</strong><br />
                            You may login with username 'Admin' and the following password:
                            <pre style="border: 1px: solid; padding: 4px; background-color: lightgrey;">@InitialAdminPassword</pre>
                        </MudAlert>
                    }
                </EditForm>

                <MudPaper Elevation="0">
                    <MudLink Href="Account/ForgotPassword">Forgot your password?</MudLink><br />
                    <MudLink Href="@(NavigationManager.GetUriWithQueryParameters("Account/Register", new Dictionary<string, object?> { ["ReturnUrl"] = ReturnUrl }))">Register as a new user</MudLink><br />
                    <MudLink Href="Account/ResendEmailConfirmation">Resend email confirmation</MudLink>
                </MudPaper>
            </MudCardContent>
        </MudCard>
        <!--
            <MudText GutterBottom="true" Typo="Typo.body1">Use another service to log in.</MudText>
        -->

        <ExternalLoginPicker Title=@T["Login with an external account"] />
    </MudStack>
</MudPaper>


@code {
    private string? errorMessage;

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (HttpMethods.IsGet(HttpContext.Request.Method))
        {
            // Clear the existing external cookie to ensure a clean login process
            await HttpContext.SignOutAsync(IdentityConstants.ExternalScheme);
        }


        // Check for fresh database
        await CheckInitialDb();
    }


    string InitialAdminPassword = string.Empty;
    async Task CheckInitialDb()
    {
        // check if admin user has been created but never logged in
        if (DbSeeder.InitialAdminPassword != null)
        {
            var admin = await um.FindByNameAsync("Admin");
            if (admin != null)
            {
                var logins = await um.GetLoginsAsync(admin);
                if (logins is null || !logins.Any())
                {
                    InitialAdminPassword = DbSeeder.InitialAdminPassword;
                }
            }
        }
    }



    public async Task LoginUser()
    {
        // This doesn't count login failures towards account lockout
        // To enable password failures to trigger account lockout, set lockoutOnFailure: true

        var result = await SignInManager.PasswordSignInWithEmailOrUsernameAsync(
            Input.Username, Input.Password, Input.RememberMe, lockoutOnFailure: false);

        if (result.Succeeded)
        {
            DbSeeder.InitialAdminPassword = null;
            Logger.LogInformation("User logged in successfully.");
            RedirectManager.RedirectTo(ReturnUrl);
        }

        try
        {
            if (result.RequiresTwoFactor)
            {
                RedirectManager.RedirectTo(
                    "Account/LoginWith2fa",
                    new() { ["returnUrl"] = ReturnUrl, ["rememberMe"] = Input.RememberMe });
            }
            else if (result.IsLockedOut)
            {
                Logger.LogWarning("User account locked out.");
                RedirectManager.RedirectTo("Account/Lockout");
            }
            else if (result.RequiresLegacyMigration)
            {
                // Legacy password detected - show migration dialog
                await ShowLegacyMigrationDialog(result);
            }
            else
            {
                errorMessage = result.ErrorMessage ?? "Error: Invalid login attempt.";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error during login attempt for {Username}", Input.Username);
            errorMessage = "An error occurred during login. Please try again.";
        }
    }

    private async Task ShowLegacyMigrationDialog(IPathSignInResult result)
    {
        if (result.User == null || string.IsNullOrEmpty(result.MigrationToken))
        {
            errorMessage = "Error: Unable to initiate password migration. Please contact support.";
            return;
        }

        try
        {
            // Send migration email
            var callbackUrl = NavigationManager.GetUriWithQueryParameters(
                NavigationManager.ToAbsoluteUri("Account/ConfirmMigration").AbsoluteUri,
                new Dictionary<string, object?>
                {
                    ["code"] = result.MigrationToken,
                    ["email"] = result.MigrationEmail,
                    ["migrate"] = "true"
                });

            var email = Encoding.UTF8.GetString(WebEncoders.Base64UrlDecode(result.MigrationEmail!));
            await EmailSender.SendPasswordResetLinkAsync(result.User, email, HtmlEncoder.Default.Encode(callbackUrl));

            // Redirect to migration confirmation page
            RedirectManager.RedirectTo("Account/AccountMigrationConfirmation/" + result.MigrationEmail);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error sending migration email for user {UserId}", result.User.Id);
            errorMessage = "Error: Unable to send migration email. Please contact support.";
        }
    }


    private sealed class InputModel
    {
        [Required]
        public string Username { get; set; } = "";

        [Required]
        [DataType(DataType.Password)]
        public string Password { get; set; } = "";

        [Display(Name = "Remember me?")]
        public bool RememberMe { get; set; }
    }
}
