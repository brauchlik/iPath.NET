@namespace iPath.Blazor.Componenents.Groups

@inject GroupListViewModel vm

<MudLink Class="@Class" Style="@Style" Typo="@Typo" OnClick="GotoGroup">@GroupName</MudLink>

@code {
    [Parameter, EditorRequired]
    public Guid? GroupId { get; set; } = null;

    [Parameter]
    public string Class { get; set; }

    [Parameter]
    public string Style { get; set; }

    [Parameter]
    public Typo Typo { get; set; }

    GroupDto group;
    string GroupName => group is null ? "" : group.Name;


    protected override async Task OnParametersSetAsync()
    {
        if (GroupId.HasValue)
        {
            group = await vm.GetGroupDto(GroupId.Value);
        }
    }


    async Task GotoGroup()
    {
        if (GroupId.HasValue)
        {
            vm.GotoGroup(GroupId.Value);
        }
    }
}
