@page "/groups/{groupId}"

@attribute [Authorize]

@inject GroupViewModel vm

@if (Model is null)
{
    <LoadingMessage />
}
else
{
    <IPathHeader Title="@vm.Model.Name" Typo="Typo.h6" />

    <MudHidden Breakpoint="Breakpoint.SmAndUp">
        <ServiceRequestCompactList GroupId="@vm.Model.Id"/>
    </MudHidden>
    <MudHidden Breakpoint="Breakpoint.Xs">
        <ServiceRequestListTable GroupId="@vm.Model.Id" />
    </MudHidden>
}


@code {
    [Parameter]
    public string groupId { get; set; }

    [Parameter]
    public GroupDto Model { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        await vm.LoadGroup(Guid.Parse(groupId));
        Model = vm.Model;
        StateHasChanged();
    }
}
