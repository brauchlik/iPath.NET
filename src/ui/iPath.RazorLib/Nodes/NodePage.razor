@page "/node/{id}"

@inject NodeViewModel nvm

@if (nvm.RootNode is null)
{
    <LoadingMessage />
}
else
{
    <NodeHeader />

    @if (!nvm.IsEditing)
    {
        <NodeDescriptionView ExpandDescription="ShowDescription" />
    }

    <NodeGallery OnShowingChildNode="@(e => ShowDescription = !e)" />

    <NodeAnnotations />
}


@code {
    [Parameter]
    public string id { get; set; }

    bool ShowDescription = true;

    protected override void OnInitialized()
    {
        nvm.ClearData();
    }

    protected override async Task OnParametersSetAsync()
    {
        await nvm.LoadNode(Guid.Parse(id));
        StateHasChanged();

        await nvm.MarkAsVisited();
    }

}
