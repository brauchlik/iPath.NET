@page "/request/{id}"

@inherits ServiceRequestViewComponentBase

@attribute [Authorize()]

<ServiceRequestHeader />

@if (vm.SelectedRequest is null)
{
    <LoadingMessage />
}
else
{
    <MudStack Spacing="4">
        <ServiceRequestDescriptionView ExpandDescription="ShowDescription" />
        <DocumentGallery OnShowingChildNode="@(e => ShowDescription = !e)" />
        <NodeAnnotations @ref="annotationView" Class="mt-8" />
    </MudStack>
}


@code {
    [Parameter]
    public string id { get; set; }

    bool ShowDescription = true;
    bool Loading;

    NodeAnnotations annotationView;


    protected override void OnInitialized()
    {
        vm.OnLoadingStarted += StartLoding;
        vm.OnLoadingStarted += StartLoding;
    }

    protected override async ValueTask OnDisposedAsync()
    {
        vm.OnLoadingStarted -= StartLoding;
        vm.OnLoadingStarted -= StartLoding;
    }

    void StartLoding()
    {
        Loading = true;
    }

    void StoptLoding()
    {
        Loading = false;
    }


    protected override async Task OnParametersSetAsync()
    {
        await vm.LoadNode(Guid.Parse(id));
        StateHasChanged();

        await vm.MarkAsVisited();
    }
}