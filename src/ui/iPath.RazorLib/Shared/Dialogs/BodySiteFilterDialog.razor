@namespace iPath.Blazor.Componenents.Users

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">@Title</MudText>
    </TitleContent>
    <DialogContent>
        <TopoTreeFilter Filter="@_filter" @ref="filterView" />
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="OnSavedHandler">Save</MudButton>
        <MudButton Variant="Variant.Filled" OnClick="@(() => MudDialog.Cancel())">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public ConceptFilter Filter { get; set; }
    private ConceptFilter _filter = new();

    TopoTreeFilter filterView;

    private bool HasBodySiteFilter = false;

    protected override void OnParametersSet()
    {
        if (Filter is not null)
        {
            _filter = Filter.Clone();
        }
    }

    void OnSavedHandler()
    {
        filterView.SaveFilter();
        MudDialog.Close(filterView.Filter);
    }
}
