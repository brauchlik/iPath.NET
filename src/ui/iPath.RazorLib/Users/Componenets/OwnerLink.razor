@namespace iPath.Blazor.Componenents.Users

@inject IDialogService srvDialog

@inject UserViewModel vm

<MudLink Class="@Class" Style="@Style" Typo="@Typo" OnClick="ShowProfileAsync">@Username</MudLink>

@code {
    [Parameter, EditorRequired]
    public OwnerDto? Owner { get; set; } = null!;

    [Parameter]
    public string Class { get; set; }

    [Parameter]
    public string Style { get; set; }

    [Parameter]
    public Typo Typo { get; set; }

    string Username => Owner is null ? "--" : Owner.Username;


    async Task ShowProfileAsync()
    {
        if (Owner is not null)
        {
            await vm.ShowProfileAsync(Owner.Id);
        }
    }
}
