@namespace iPath.Blazor.Componenents.Users

@inject UserViewModel vm

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Notification Preferences: @Title</MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="6" sm="6">
                <MudSwitch @bind-Value="Model.Settings.DailyEmailSummary" Label=@T["Send email notifications as daily summany"] Color="Color.Success" />
            </MudItem>
            <MudItem xs="6" sm="6">
                <MudTimePicker @bind-Value="Model.Settings.SummaryEmailTime" Label=@T["Schedule daily email at"] Disabled=@(!Model.Settings.DailyEmailSummary)
                               Variant="Variant.Outlined" Margin="Margin.Dense" ShrinkLabel="true" />
            </MudItem>
        </MudGrid>

        <MudDivider Class="my-2" />


        <MudSwitch @bind-Value="UseProfileBodySiteFilter" Label="@ProfileBodySiteLabel"
                   Disabled=@(!ProfileHasBodySiteFilter) Color="Color.Success" />

        <MudSwitch @bind-Value="HasCustomBodySiteFilter" Label=@T["Custom body site filter"] Color="Color.Success" />
        @if (HasCustomBodySiteFilter)
        {
            <TopoTreeFilter Filter="@Model.Settings.BodySiteFilter" @ref="filterView" />
        }
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="OnSavedHandler">Save</MudButton>
        <MudButton Variant="Variant.Filled" OnClick="@(() => MudDialog.Close())">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public UserNotificationModel Model { get; set; }

    TopoTreeFilter filterView;


    private UserProfile profile;

    private bool ProfileHasBodySiteFilter => profile?.SpecialisationBodySite is not null;
    private string ProfileBodySiteFilterStr => ProfileHasBodySiteFilter ? $"({profile.SpecialisationBodySite.ConceptCodesString})" : "";
    private string ProfileBodySiteLabel => @T["Body site filter from User-Profile active"] + " " + ProfileBodySiteFilterStr;

    private bool UseProfileBodySiteFilter
    {
        get => field;
        set
        {
            field = value;
            if (value) HasCustomBodySiteFilter = false;
        }
    }

    private bool HasCustomBodySiteFilter
    {
        get => field;
        set
        {
            field = value;
            if (value) UseProfileBodySiteFilter = false;
        }
    }


    protected override async Task OnInitializedAsync()
    {
        if (Model is not null)
        {
            Model.Settings ??= new();

            HasCustomBodySiteFilter = Model?.Settings?.BodySiteFilter is not null;
            profile = await vm.GetProfileAsync(Model.UserId);
            UseProfileBodySiteFilter = Model.Settings.UseProfileBodySiteFilter;
            HasCustomBodySiteFilter = Model.Settings.BodySiteFilter is not null;
        }
    }


    void OnSavedHandler()
    {
        Model.Settings.UseProfileBodySiteFilter = UseProfileBodySiteFilter;
        if (!HasCustomBodySiteFilter)
        {
            Model.Settings.BodySiteFilter = null;
        }
        else
        {
            filterView.SaveFilter();
            Model.Settings.BodySiteFilter = filterView.Filter;
        }

        MudDialog.Close(true);
    }
}
