@page "/user/newannotations"

@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@using iPath.Application.Features.ServiceRequests

@inject IStringLocalizer T
@inject AuthenticationStateProvider asp
@inject AppState appSate

<IPathHeader Title=@T["Requests with new annotations"] Typo="Typo.h6" />

@if (UserId.HasValue)
{
    <ServiceRequestListTable ListMode="eRequestFilter.NewAnnotations" />
}

@code {
    Guid? UserId = null;

    protected override async Task OnInitializedAsync()
    {
        var a = await asp.GetAuthenticationStateAsync();
        if (a.User.Identity.IsAuthenticated)
        {
            await appSate.ReloadSession();
            if (appSate.User != null)
            {
                UserId = appSate.User.Id;
                StateHasChanged();
            }
        }
    }
}
